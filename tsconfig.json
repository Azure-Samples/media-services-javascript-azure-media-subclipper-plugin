{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "dist/tsc",
    "noEmitOnError": true,
    "sourceMap": true,
    "module": "amd",
    "target": "es5",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "watch": false
  },
  "exclude": [
    "dist/",
    "node_modules/"
  ]
}
